#sign_in_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
          %i.fa.fa-times-circle
        %h4#SignInModal.modal-title Create an account
      = bootstrap_form_for(resource, :as => resource_name, :inline_errors =>false, :url => session_path(resource_name), :remote => true, :format => :js,  :html => {:class => "form-signin", :id=>"addSubmit"}) do |f|
        .modal-body
          //= f.error_notification
          = f.text_field :username, :autofocus => true, :label => "Username or Email", :input_html => {:class => 'form-control'}, :placeholder => "toppers"
          = f.password_field :password, :autofocus => true, :input_html => {:class => 'form-control'}, :placeholder => "example123@gmail.com"
          = f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable?
        .modal-footer
          .form-actions
            %a{ :href => "#", :class => "btn", "data-dismiss" => "modal" } cancel
            = f.submit "Login", :class => "btn btn-success"
            
